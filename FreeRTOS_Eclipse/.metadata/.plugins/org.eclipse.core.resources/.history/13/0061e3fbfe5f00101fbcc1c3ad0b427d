#include "adc0.h"
#include "tm4c123gh6pm_registers.h"

//For both potentiometers will use pe0 and pe1

static void GPIO_SetupADC0Pins(void)
{
    SYSCTL_RCGCGPIO_REG  |= 0x10;         /* Enable clock for GPIO PORTE */
    while(!(SYSCTL_PRGPIO_REG & 0x10));   /* Wait until GPIO PORTA clock is activated and it is ready for access*/

    GPIO_PORTE_AFSEL_REG |= 0x03;         /* Enable Analog on PE0 & PE1 */
    GPIO_PORTE_DEN_REG   &= 0xFC;         /* Disable Digital I/O on PE0 & PE1 */
    GPIO_PORTE_AMSEL_REG |= 0x03;         /* Disable Isolation and Enable Analog on PE0 & PE1 */

}

void ADC_Init(void)
{
   SYSCTL_RCGCADC_REG |= (1<<0);
   while(!(SYSCTL_PRADC_REG & 0x01));
   GPIO_SetupADC0Pins();
}

void ADC_ReadChannel(ADC_PINS Channel)
{
    ADC0_ADCACTSS_REG = 0;
}

